{% doc %}
  Renders a modal dialog with header, content area, and close functionality

  @param {string} [modal_id] - Unique identifier for the modal
  @param {string} [title] - Modal title text
  @param {string} [size] - Modal size ('small', 'medium', 'large')

  @example Basic usage
  {% render 'modal', modal_id: 'size-guide' %}

  @example With title and size
  {% render 'modal', 
    modal_id: 'product-details',
    title: 'Product Details',
    size: 'large'
  %}
{% enddoc %}

<div class="modal popover" data-modal>
  <div class="modal__wash"></div>
  <div class="modal__inner" data-scroll-lock-ignore>
    <div class="modal__header">
      <button
        type="button"
        data-modal-close
        class="modal__close-icon"
        aria-label="{{ 'general.accessibility.close_modal' | t }}"
      >
        {% render 'icon-button' with small: true, icon: 'close' %}
      </button>
    </div>
    <div class="modal__content rte non-page-rte"></div>
  </div>
</div>
