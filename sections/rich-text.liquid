<!-- File: sections/rich-text.liquid -->
{%- if section.settings.enable_section_style -%}
  {%- render 'section-style', section: section -%}
{%- endif -%}
{%- liquid
  assign alignment_values = section.settings.alignment | split: '_'
  assign heading_alignment = alignment_values | first
  assign content_alignment = alignment_values | last
-%}

<div
  data-section-id="{{ section.id }}"
  data-section-type="rich-text"
  class="
    rich-text
    section
    section--divider-{{ section.settings.divider_style }}
    {{ section.settings.section_padding }}
    {% if settings.enable_section_animations and section.settings.enable_animation %}
      animation
      animation--rich-text
    {% endif %}
  "
  style="
    {% if section.settings.content_width == 'custom' %}
      --content-width: {{ section.settings.custom_content_width }}px;
    {% endif %}
    --content-alignment: {{ content_alignment }};
    --heading-alignment: {{ heading_alignment }};
  "
>
  <div class="rich-text__inner section-blocks animation--section-blocks">
    {%- for block in section.blocks -%}
      {%- case block.type -%}
        {%- when 'accent' -%}
          {%- unless block.settings.accent == blank -%}
            <p
              {{ block.shopify_attributes }}
              class="rich-text__accent fs-accent section-blocks__accent"
            >
              {{ block.settings.accent }}
            </p>
          {%- endunless -%}
        {%- when 'heading' -%}
          {%- unless block.settings.title == blank -%}
            <{{ block.settings.heading_tag }}
              {{ block.shopify_attributes }}
              class="rich-text__heading ff-heading {{ block.settings.heading_font_class }} section-blocks__heading"
            >
              {{ block.settings.title | newline_to_br }}
            </{{ block.settings.heading_tag }}>
          {%- endunless -%}
        {%- when 'subheading' -%}
          {%- unless block.settings.subheading == blank -%}
            <{{ block.settings.subheading_tag }}
              {{ block.shopify_attributes }}
              class="rich-text__subheading ff-subheading {{ block.settings.subheading_font_class }} section-blocks__subheading"
            >
              {{ block.settings.subheading }}
            </{{ block.settings.subheading_tag }}>
          {%- endunless -%}
        {%- when 'text' -%}
          {%- unless block.settings.text == blank -%}
            <div
              {{ block.shopify_attributes }}
              class="rich-text__text rte ff-body {{ block.settings.text_font_class }} section-blocks__subheading"
            >
              {{ block.settings.text }}
            </div>
          {%- endunless -%}
        {%- when 'image' -%}
          {%- liquid
            assign full_width = false
            if block.settings.content_width == 'full'
              assign full_width = true
            endif
          -%}

          {%- render 'image-block',
            shopify_attributes: block.shopify_attributes,
            wrapper_class: wrapper_class,
            image: block.settings.image,
            image_mobile: block.settings.mobile_image,
            image_xl: block.settings.image_xl,
            width: block.settings.image_size,
            mobile_width: block.settings.image_size_mobile,
            break_to_mobile_at: '720',
            align: content_alignment,
            full_width: full_width
          -%}

        {%- when 'button' -%}
          {%-
            render 'button-block' with
            shopify_attributes: block.shopify_attributes,
            wrapper_class: "rich-text__button section-blocks__button",
            link: block.settings.link,
            label: block.settings.link_text,
            button_style: block.settings.button_style,
            button_alignment: content_alignment,
            buttons_can_inline: true,
            forloop: forloop
          -%}
        {%- when 'video' -%}
          {%- liquid
            assign mobile_video = block.settings.video_mobile
            assign mobile_poster_image = block.settings.mobile_poster_image

            assign desktop_video = block.settings.video_desktop
            assign desktop_poster_image = block.settings.desktop_poster_image

            assign large_video = block.settings.video_large
            assign large_poster_image = block.settings.large_poster_image

            assign autoplay = block.settings.autoplay
          -%}

          <div
            class="animation animation--custom-video w-full my-4"
            {{ block.shopify_attributes }}
          >
            <div class="relative w-full">
              {%- render 'responsive-video',
                video: desktop_video,
                mobile_video: mobile_video,
                large_video: large_video,
                class: 'relative w-full overflow-hidden',
                poster_image: desktop_poster_image,
                mobile_poster_image: mobile_poster_image,
                large_poster_image: large_poster_image,
                autoplay: autoplay
              -%}
            </div>
          </div>

        {%- when 'border' -%}
          {%- render 'border-block' -%}
        {%- when 'spacer' -%}
          {%- render 'spacer-block', space: block.settings.space -%}
      {%- endcase -%}
    {%- endfor -%}
  </div>
</div>

