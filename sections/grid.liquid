<!-- File: sections/grid.liquid -->
{%- if section.settings.enable_section_style -%}
  {%- render 'section-style', section: section -%}
{%- endif -%}

{%- liquid
  if section.settings.use_first_image_aspect_ratio
    assign first_settings = section.blocks.first.settings

    assign first_mobile_image = first_settings.mobile_image
    assign first_image = first_settings.image
    assign first_image_xl = first_settings.image_xl

    assign aspect_ratio = first_image.aspect_ratio
    assign aspect_ratio = 1 | divided_by: aspect_ratio | times: 100

    if first_mobile_image != blank
      assign aspect_ratio_mobile = first_mobile_image.aspect_ratio
      assign aspect_ratio_mobile = 1 | divided_by: aspect_ratio_mobile | times: 100
    else
      assign aspect_ratio_mobile = aspect_ratio
    endif

    if first_image_xl != blank
      assign aspect_ratio_xl = first_image_xl.aspect_ratio
      assign aspect_ratio_xl = 1 | divided_by: aspect_ratio_xl | times: 100
    else
      assign aspect_ratio_xl = aspect_ratio
    endif

  else
    assign aspect_ratio = section.settings.aspect_ratio | default: 100
    assign aspect_ratio_mobile = section.settings.aspect_ratio_mobile | default: 140
    assign aspect_ratio_xl = section.settings.aspect_ratio_xl | default: 60
  endif
-%}
{% comment %}
  <p>using first image aspect ratio: {{ section.settings.use_first_image_aspect_ratio }}</p>
  <p>first image: {{ first_image }}</p>
  <p>first mobile image: {{ first_mobile_image }}</p>
  <p>first image xl: {{ first_image_xl }}</p>
  <p>aspect ratio: {{ aspect_ratio }}</p>
  <p>aspect ratio mobile: {{ aspect_ratio_mobile }}</p>
  <p>aspect ratio xl: {{ aspect_ratio_xl }}</p>
{% endcomment %}
<!-- sections/grid.liquid -->
<div
  class="
    grid
    section
    section--divider-{{ section.settings.divider_style }}
    {{ section.settings.section_padding }}
    {% if section.settings.full_width %}
      section--full-width
    {% endif %}
    {% if settings.enable_section_animations and section.settings.enable_animation %}
      animation
      animation--grid
    {% endif %}
  "
  style="
    --aspect-ratio: {{ aspect_ratio }}%;
    --aspect-ratio-mobile: {{ aspect_ratio_mobile }}%;
    --aspect-ratio-xl: {{ aspect_ratio_xl }}%;
    --grid-spacing: {{ section.settings.spacing }}px;
    --grid-spacing-mobile: {{ section.settings.spacing_mobile }}px;
    --text-align: {{ section.settings.content_alignment }};
  "
  data-section-id="{{ section.id }}"
  data-section-type="grid"
>
  {%- if section.settings.heading != blank or section.settings.subheading != blank -%}
    <div class="grid__header">
      <div class="grid__text-block section-introduction animation--section-introduction">
        {%- unless section.settings.heading == blank -%}
          <{{ section.settings.heading_tag }} class="grid__heading ff-heading fs-heading-3-base section-introduction__heading">
            {{ section.settings.heading | newline_to_br }}
          </{{ section.settings.heading_tag }}>
        {%- endunless -%}

        {%- unless section.settings.subheading == blank -%}
          <div class="grid__subheading lh-subheading fs-body-100 rte section-introduction__subheading">
            {{ section.settings.subheading }}
          </div>
        {%- endunless -%}
      </div>
    </div>
  {%- endif -%}
  <div class="grid__inner ">
    {%- for block in section.blocks -%}
      {%- render 'grid-item', block: block -%}
    {%- endfor -%}
  </div>
</div>

