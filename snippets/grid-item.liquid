{%- liquid
  assign overlay_opacity = block.settings.overlay_opacity | divided_by: 100.0
  assign text_position = block.settings.text_position | split: '_'
  assign horizontal_position = text_position | first
  assign vertical_position = text_position | last
  assign has_background_color = false

  if block.settings.background_color != blank and block.settings.background_color != 'rgba(0,0,0,0)'
    assign has_background_color = true
  endif

  assign text_position_modifier = 'center'

  if horizontal_position == 'flex-start'
    assign text_position_modifier = 'left'
  elsif horizontal_position == 'flex-end'
    assign text_position_modifier = 'right'
  endif

  if section.settings.set_button_style_globally
    assign button_style_settings = section.settings
    assign button_style_settings_key = 'block_button'
    assign button_style = section.settings.block_button_style
  else
    assign button_style_settings = block.settings
    assign button_style_settings_key = 'button'
    assign button_style = block.settings.button_style
  endif

  if section.settings.set_header_size_globally
    assign block_header_size = section.settings.block_header_size
    assign block_header_size_mobile = section.settings.block_header_size_mobile
  else
    assign block_header_size = block.settings.header_size
    assign block_header_size_mobile = block.settings.header_size_mobile
  endif

  if section.settings.set_block_padding_globally
    assign block_padding = section.settings.block_padding
    assign block_padding_mobile = section.settings.block_padding_mobile
  else
    assign block_padding = block.settings.padding
    assign block_padding_mobile = block.settings.padding_mobile
  endif

  if section.settings.set_block_width_globally
    assign block_width = section.settings.block_width
    assign block_width_mobile = section.settings.block_width_mobile
  else
    assign block_width = block.settings.width
    assign block_width_mobile = block.settings.width_mobile
  endif

  assign use_small_button_above_960 = false

  if block_width == '33' or block_width == '25'
    assign use_small_button_above_960 = true
  endif

  assign image_size_desktop = block_width | split: '-' | last
  assign image_size_mobile = block_width_mobile | split: '-' | last

  # size map converting tailwind width to viewwidth for sizes
  assign size_map = 'full,100,2/3,66,1/2,50,1/3,33,1/4,25' | split: ','

  assign image_size_desktop_map_index = size_map | find_index: image_size_desktop | plus: 1
  assign image_size_mobile_map_index = size_map | find_index: image_size_mobile | plus: 1

  assign image_size_desktop = size_map[image_size_desktop_map_index]
  assign image_size_mobile = size_map[image_size_mobile_map_index]
-%}

{%- capture image_sizes -%}
  {{ image_size_desktop }}vw, (max-width: 719px) {{ image_size_mobile }}vw
{%- endcapture -%}

<div
  class="
      group
    grid-item
    {{ block_width }}
    {{ block_width_mobile }}
    grid-item--text-{{ text_position_modifier }}
  "
  style="
    --padding: {{ block_padding }};
    --padding-mobile: {{ block_padding_mobile }};
    --media-fit: {{ block.settings.media_fit }};
    --text-horizontal-position: {{ horizontal_position }};
    --text-vertical-position: {{ vertical_position }};
    --background-color: {{ block.settings.background_color }};
    --color-text: {{ block.settings.text_color }};
    --color-text-link: {{ block.settings.text_color }};
    --overlay-background: {{ block.settings.color_overlay }};
    {% if block.settings.color_overlay_gradient != blank %}
      --overlay-background-gradient: {{ block.settings.color_overlay_gradient }};
    {% endif %}
    --overlay-opacity: {{ overlay_opacity }};
    {% render 'overlay-button-vars' with color_button_text: block.settings.button_text_color, color_button_background: block.settings.button_background_color %}
  "
  {{ block.shopify_attributes }}
>
  {%- capture wrapping_tag -%}
    {%- if block.settings.link != blank %}a{% else %}div{% endif -%}
  {%- endcapture -%}
  {%- capture wrapping_attributes -%}
    {%- if block.settings.link != blank -%}
      href="{{ block.settings.link }}"
    {%- endif -%}
  {%- endcapture -%}
  <{{ wrapping_tag }}
    {{ wrapping_attributes }}
    class="
      grid-item__inner
      pb-[var(--aspect-ratio-mobile)]
      md:pb-[var(--aspect-ratio)]
      xlg:pb-[var(--aspect-ratio-xl)]
    "
  >
    {%- liquid
      assign image = block.settings.image_xl | default: block.settings.image
      assign class = 'img-fit img-fit--zoom group-hover:scale-105'
      if block.settings.media_fit == 'contain'
        assign class = class | append: ' img-fit--contain'
      endif
    -%}

    {%- if image != blank -%}
      {%- render 'pictures',
        breakpoints: '719, 1800',
        image: image,
        image_719: block.settings.mobile_image,
        image_1800: block.settings.image_xl,
        sizes: image_sizes,
        widths: '390, 719, 1200, 1536, 1920, 3000',
        class: 'img-fit img-fit--zoom group-hover:scale-105',
        focal_point: block.settings.focal_point,
        section_index: section.index
      -%}
    {%- elsif has_background_color == false -%}
      {%- render 'placeholder-image',
        wrapper_class: 'grid-item__image',
        placeholder_name: 'lifestyle-1',
        natural_fallback_ratio: 'natural'
      -%}
    {%- endif -%}
    <div class="grid-item__overlay"></div>

    <div
      class="
        grid-item__text-container-wrapper
        p-[var(--padding-mobile)]
        md:p-[var(--padding)]
        absolute top-0 left-0 w-full h-full
      "
    >
      <div class="grid-item__text-container">
        <div class="grid-item__text-container-inner  section-blocks animation--section-blocks">
          {%- unless block.settings.accent == blank -%}
            <p class="grid-item__accent fs-accent section-blocks__accent">
              {{ block.settings.accent }}
            </p>
          {%- endunless -%}

          {%- unless block.settings.title == blank -%}
            <{{ block.settings.heading_tag }}
              class="
                grid-item__heading
                ff-heading
                {{ block_header_size }}
                {{ block_header_size_mobile }}
                section-blocks__heading
              "
            >
              {{ block.settings.title }}
            </{{ block.settings.heading_tag }}>
          {%- endunless -%}

          {%- unless block.settings.subheading == blank -%}
            <{{ block.settings.subheading_tag }} class="grid-item__subheading ff-subheading {{ block.settings.subheading_font_class }} section-blocks__subheading">
              {{ block.settings.subheading }}
            </{{ block.settings.subheading_tag }}>
          {%- endunless -%}

          {%- unless block.settings.text == blank -%}
            <div class="grid-item__text rte ff-body {{ block.settings.text_font_class }} section-blocks__text">
              {{ block.settings.text }}
            </div>
          {%- endunless -%}

          {%- if block.settings.link_text != blank and block.settings.link != blank -%}
            <div class="grid-item__button section-blocks__button">
              {%- style -%}
                #button-{{ block.id }} {
                  {%- render 'button-style',
                    settings_object: button_style_settings,
                    settings_key: button_style_settings_key
                  -%}
                }

                @media (max-width: 768px) {
                  {%- assign button_style_settings_key_mobile = button_style_settings_key | append: '_mobile' %}
                  #button-{{ block.id }} {
                    {%- render 'button-style',
                      settings_object: button_style_settings,
                      settings_key: button_style_settings_key_mobile
                    -%}
                  }
              {%- endstyle -%}

              <div
                id="button-{{ block.id }}"
                class="btn btn--overlay {{ button_style }}{% if use_small_button_above_960 %} btn--small-above-960{% endif %}"
              >
                <span>{{ block.settings.link_text }}</span>
              </div>
            </div>
          {%- endif -%}
        </div>
      </div>
    </div>
  </{{ wrapping_tag }}>
</div>
